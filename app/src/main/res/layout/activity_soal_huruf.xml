<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SoalHurufActivity"
    android:background="@color/colorBG">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:scaleType="centerCrop">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/previous"
                    android:layout_gravity="center"
                    android:id="@+id/btn_back"
                    android:layout_marginLeft="30dp"
                    android:contentDescription="@string/button_back_desc">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/level"
                    android:id="@+id/judul_level"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="65dp"
                    android:textSize="30sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="65dp">
                </TextView>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/soal"
                android:id="@+id/soal"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/black">
            </TextView>
        </LinearLayout>
            <LinearLayout
                android:layout_width="384dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|center_vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_soal"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorSecond"
                    app:cardCornerRadius="15dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/btn_sound"
                        android:src="@drawable/volume"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:contentDescription="@string/button_volume_desc">
                    </ImageView>

                    <TextView
                        android:id="@+id/soalnya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/soalhuruf"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="30sp"
                        android:textStyle="bold"></TextView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/border">
                <com.williamww.silkysignature.views.SignaturePad
                    android:id="@+id/huruf_pad"
                    android:layout_width="wrap_content"
                    android:layout_height="520dp">
                </com.williamww.silkysignature.views.SignaturePad>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:id="@+id/button_reset"
                    app:cardBackgroundColor="@color/colorButton">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/reset"
                        android:id="@+id/reset"
                        android:contentDescription="@string/button_reset_desc">
                    </ImageView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_send"
                    app:cardBackgroundColor="@color/tosca">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check"
                        android:id="@+id/send"
                        android:contentDescription="@string/button_send_desc">
                    </ImageView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
    </LinearLayout>
</RelativeLayout>